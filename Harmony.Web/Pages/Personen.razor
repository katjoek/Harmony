@page "/personen"
@using Harmony.ApplicationCore.DTOs
@using Harmony.ApplicationCore.Queries.Persons
@using Harmony.ApplicationCore.Commands.Persons
@using Harmony.Web.Models
@using MediatR

<PageTitle>Personen - Harmony</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Personen</h1>
    <div class="d-flex gap-2">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input class="form-control" placeholder="Zoeken..." @bind="personSearch" @bind:event="oninput" />
            @if (!string.IsNullOrWhiteSpace(personSearch))
            {
                <button type="button" class="btn btn-outline-secondary" title="Wissen" @onclick="ClearPersonSearch">
                    <i class="fas fa-times"></i>
                </button>
            }
        </div>
        <button type="button" class="btn btn-primary" @onclick="OpenCreateModal">
            <i class="fas fa-plus me-2"></i>
            Nieuwe Persoon
        </button>
    </div>
</div>

<!-- Always show the table structure immediately for fast rendering -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Geboortedatum</th>
                <th>Adres</th>
                <th>Telefoon</th>
                <th>E-mail</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @if (persons == null)
            {
                <!-- Skeleton loading rows for instant feedback -->
                @for (int i = 0; i < 5; i++)
                {
                    <tr>
                        <td><div class="placeholder-glow"><span class="placeholder col-8"></span></div></td>
                        <td><div class="placeholder-glow"><span class="placeholder col-6"></span></div></td>
                        <td><div class="placeholder-glow"><span class="placeholder col-10"></span></div></td>
                        <td><div class="placeholder-glow"><span class="placeholder col-7"></span></div></td>
                        <td><div class="placeholder-glow"><span class="placeholder col-9"></span></div></td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-secondary" disabled>
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-secondary" disabled>
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            else if (persons.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Geen personen gevonden.</td>
                </tr>
            }
            else if (!FilteredPersons.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">Geen resultaten voor "@personSearch".</td>
                </tr>
            }
            else
            {
                @foreach (var person in FilteredPersons)
                {
                    <tr>
                        <td>@person.FullName</td>
                        <td>@person.DateOfBirth?.ToString("dd-MM-yyyy")</td>
                        <td>@person.FormattedAddress</td>
                        <td>@person.PhoneNumber</td>
                        <td>@person.EmailAddress</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-sm btn-info" title="Groepen" @onclick="@(() => OpenGroupsModal(person))">
                                    <i class="fas fa-users"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-primary" @onclick="@(() => OpenEditModal(person))">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" @onclick="@(() => DeletePerson(person))">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Groups Membership Modal -->
<div class="modal fade @(showGroupsModal ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Groepen van @(selectedPerson?.FullName)</h5>
                <button type="button" class="btn-close" @onclick="CloseGroupsModal"></button>
            </div>
            <div class="modal-body">
                @if (selectedPerson != null && personGroups != null && availableGroups != null)
                {
                    <div class="row">
                        <div class="col-md-5">
                            <label class="form-label">Niet-lid van</label>
                            <select id="person-available-groups" multiple size="10" class="form-select dual-list-select" @onchange="OnAvailableGroupsChange">
                                @foreach (var g in availableGroups)
                                {
                                    <option value="@g.Id">@g.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 d-flex flex-column justify-content-center align-items-center gap-2">
                            <button type="button" class="btn btn-outline-primary" title="Naar rechts" @onclick="MoveSelectedAvailableGroupsToMember" disabled="@isProcessingGroups || !selectedAvailableGroupIds.Any()">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            <button type="button" class="btn btn-outline-primary" title="Naar links" @onclick="MoveSelectedMemberGroupsToAvailable" disabled="@isProcessingGroups || !selectedMemberGroupIds.Any()">
                                <i class="fas fa-arrow-left"></i>
                            </button>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label">Lid van (@personGroups.Count)</label>
                            <select id="person-member-groups" multiple size="10" class="form-select dual-list-select" @onchange="OnMemberGroupsChange">
                                @foreach (var g in personGroups)
                                {
                                    <option value="@g.Id">@g.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="CloseGroupsModal">Sluiten</button>
            </div>
        </div>
    </div>
 </div>

<!-- Create/Edit Modal -->
<div class="modal fade @(showPersonModal ? "show d-block" : "")" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@modalTitle</h5>
                <button type="button" class="btn-close" @onclick="CloseModal"></button>
            </div>
            <EditForm Model="@personModel" OnValidSubmit="@SavePerson">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Voornaam *</label>
                                <InputText @bind-Value="@personModel.FirstName" class="form-control" />
                                <ValidationMessage For="@(() => personModel.FirstName)" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Tussenvoegsel</label>
                                <InputText @bind-Value="@personModel.Prefix" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Achternaam</label>
                                <InputText @bind-Value="@personModel.Surname" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Geboortedatum</label>
                                <InputDate @bind-Value="@personModel.DateOfBirth" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Telefoon</label>
                                <InputText @bind-Value="@personModel.PhoneNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">E-mail</label>
                                <InputText @bind-Value="@personModel.EmailAddress" class="form-control" type="email" />
                                <ValidationMessage For="@(() => personModel.EmailAddress)" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label">Straat en huisnummer</label>
                                <InputText @bind-Value="@personModel.Street" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label">Postcode</label>
                                <InputText @bind-Value="@personModel.ZipCode" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Plaats</label>
                                <InputText @bind-Value="@personModel.City" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Annuleren</button>
                    <button type="submit" class="btn btn-primary">Opslaan</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<PersonDto>? persons;
    private PersonViewModel personModel = new();
    private string modalTitle = "";
    private bool isEditing = false;
    private bool showPersonModal = false;
    private string personSearch = "";
    
    // Groups modal state
    private bool showGroupsModal = false;
    private PersonDto? selectedPerson;
    private List<GroupDto>? allGroups;
    private List<GroupDto>? personGroups;
    private List<GroupDto>? availableGroups;
    private List<string> selectedAvailableGroupIds = new();
    private List<string> selectedMemberGroupIds = new();
    private bool isProcessingGroups = false;

    protected override Task OnInitializedAsync()
    {
        // Start loading data in the background without blocking the initial render
        _ = Task.Run(async () =>
        {
            try
            {
                await LoadPersons();
            }
            catch (Exception ex)
            {
                // Log error but don't crash the page
                Console.WriteLine($"Error loading persons: {ex.Message}");
            }
        });
        return Task.CompletedTask;
    }

    private async Task LoadPersons()
    {
        var query = new GetAllPersonsQuery();
        persons = (await Mediator.Send(query)).ToList();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadGroups()
    {
        var query = new Harmony.ApplicationCore.Queries.Groups.GetAllGroupsQuery();
        allGroups = (await Mediator.Send(query)).ToList();
    }

    private void OpenCreateModal()
    {
        personModel = new PersonViewModel();
        modalTitle = "Nieuwe Persoon";
        isEditing = false;
        showPersonModal = true;
    }

    private async Task OpenGroupsModal(PersonDto person)
    {
        selectedPerson = person;
        await LoadGroups();
        LoadPersonGroups();
        UpdateAvailableGroups();
        showGroupsModal = true;
        // Register double-click handlers on next render
        await Task.Yield();
        await JSRuntime.InvokeVoidAsync("selectUtils.registerDblClick", "person-available-groups", DotNetObjectReference.Create(this), nameof(OnAvailableGroupDblClick));
        await JSRuntime.InvokeVoidAsync("selectUtils.registerDblClick", "person-member-groups", DotNetObjectReference.Create(this), nameof(OnMemberGroupDblClick));
    }

    private void LoadPersonGroups()
    {
        if (allGroups == null || selectedPerson == null) return;
        var set = selectedPerson.GroupIds.ToHashSet();
        personGroups = allGroups.Where(g => set.Contains(g.Id)).ToList();
    }

    private void UpdateAvailableGroups()
    {
        if (allGroups == null || personGroups == null) return;
        var member = personGroups.Select(g => g.Id).ToHashSet();
        availableGroups = allGroups.Where(g => !member.Contains(g.Id)).ToList();
        selectedAvailableGroupIds.Clear();
        selectedMemberGroupIds.Clear();
    }

    private void CloseGroupsModal()
    {
        showGroupsModal = false;
        selectedPerson = null;
        allGroups = null;
        personGroups = null;
        availableGroups = null;
        selectedAvailableGroupIds.Clear();
        selectedMemberGroupIds.Clear();
        JSRuntime.InvokeVoidAsync("selectUtils.unregisterDblClick", "person-available-groups");
        JSRuntime.InvokeVoidAsync("selectUtils.unregisterDblClick", "person-member-groups");
    }

    [JSInvokable]
    public Task OnAvailableGroupDblClick(string groupId)
        => MoveAvailableGroupsToMember(new [] { groupId });

    [JSInvokable]
    public Task OnMemberGroupDblClick(string groupId)
        => MoveMemberGroupsToAvailable(new [] { groupId });

    private async Task MoveSelectedAvailableGroupsToMember()
    {
        await MoveAvailableGroupsToMember(selectedAvailableGroupIds.ToArray());
    }

    private async Task MoveSelectedMemberGroupsToAvailable()
    {
        await MoveMemberGroupsToAvailable(selectedMemberGroupIds.ToArray());
    }

    private async Task MoveAvailableGroupsToMember(IEnumerable<string> groupIds)
    {
        if (selectedPerson == null) return;
        var ids = groupIds?.ToArray() ?? Array.Empty<string>();
        if (ids.Length == 0) return;
        try
        {
            isProcessingGroups = true;
            foreach (var gid in ids)
            {
                var cmd = new Harmony.ApplicationCore.Commands.Membership.AddPersonToGroupCommand(selectedPerson.Id, gid);
                await Mediator.Send(cmd);
            }
            await RefreshGroupsState();
            ShowSuccessMessage("Persoon aan groepen toegevoegd.");
        }
        catch (Exception ex)
        {
            ShowErrorMessage($"Fout bij toevoegen: {ex.Message}");
        }
        finally
        {
            isProcessingGroups = false;
        }
    }

    private async Task MoveMemberGroupsToAvailable(IEnumerable<string> groupIds)
    {
        if (selectedPerson == null) return;
        var ids = groupIds?.ToArray() ?? Array.Empty<string>();
        if (ids.Length == 0) return;
        try
        {
            isProcessingGroups = true;
            foreach (var gid in ids)
            {
                var cmd = new Harmony.ApplicationCore.Commands.Membership.RemovePersonFromGroupCommand(selectedPerson.Id, gid);
                await Mediator.Send(cmd);
            }
            await RefreshGroupsState();
            ShowSuccessMessage("Persoon uit groepen verwijderd.");
        }
        catch (Exception ex)
        {
            ShowErrorMessage($"Fout bij verwijderen: {ex.Message}");
        }
        finally
        {
            isProcessingGroups = false;
        }
    }

    private async Task RefreshGroupsState()
    {
        if (selectedPerson == null) return;
        await LoadPersons();
        await LoadGroups();
        LoadPersonGroups();
        UpdateAvailableGroups();
        StateHasChanged();
    }

    private async void OnAvailableGroupsChange(ChangeEventArgs _)
    {
        try
        {
            var values = await JSRuntime.InvokeAsync<string[]>("selectUtils.getSelectedValues", "person-available-groups");
            selectedAvailableGroupIds = values?.ToList() ?? new List<string>();
        }
        catch
        {
            selectedAvailableGroupIds.Clear();
        }
    }

    private async void OnMemberGroupsChange(ChangeEventArgs _)
    {
        try
        {
            var values = await JSRuntime.InvokeAsync<string[]>("selectUtils.getSelectedValues", "person-member-groups");
            selectedMemberGroupIds = values?.ToList() ?? new List<string>();
        }
        catch
        {
            selectedMemberGroupIds.Clear();
        }
    }

    private void OpenEditModal(PersonDto person)
    {
        personModel = new PersonViewModel
        {
            Id = person.Id,
            FirstName = person.FirstName,
            Prefix = person.Prefix,
            Surname = person.Surname,
            DateOfBirth = person.DateOfBirth,
            Street = person.Street,
            ZipCode = person.ZipCode,
            City = person.City,
            PhoneNumber = person.PhoneNumber,
            EmailAddress = person.EmailAddress
        };
        modalTitle = "Persoon Bewerken";
        isEditing = true;
        showPersonModal = true;
    }

    private async Task SavePerson()
    {
        try
        {
            if (isEditing)
            {
                var command = new UpdatePersonCommand(
                    personModel.Id!,
                    personModel.FirstName!,
                    personModel.Prefix,
                    personModel.Surname,
                    personModel.DateOfBirth,
                    personModel.Street,
                    personModel.ZipCode,
                    personModel.City,
                    personModel.PhoneNumber,
                    personModel.EmailAddress);

                await Mediator.Send(command);
            }
            else
            {
                var command = new CreatePersonCommand(
                    personModel.FirstName!,
                    personModel.Prefix,
                    personModel.Surname,
                    personModel.DateOfBirth,
                    personModel.Street,
                    personModel.ZipCode,
                    personModel.City,
                    personModel.PhoneNumber,
                    personModel.EmailAddress);

                await Mediator.Send(command);
            }

            await LoadPersons();
            CloseModal();
            ShowSuccessMessage("Persoon succesvol opgeslagen!");
        }
        catch (Exception ex)
        {
            ShowErrorMessage($"Fout bij opslaan: {ex.Message}");
        }
    }

    private async Task DeletePerson(PersonDto person)
    {
        if (await ShowConfirmDialog($"Weet u zeker dat u {person.FullName} wilt verwijderen?"))
        {
            try
            {
                var command = new DeletePersonCommand(person.Id);
                await Mediator.Send(command);
                await LoadPersons();
                ShowSuccessMessage("Persoon succesvol verwijderd!");
            }
            catch (Exception ex)
            {
                ShowErrorMessage($"Fout bij verwijderen: {ex.Message}");
            }
        }
    }

    private void CloseModal()
    {
        showPersonModal = false;
    }

    private async Task<bool> ShowConfirmDialog(string message)
    {
        return await JSRuntime.InvokeAsync<bool>("confirm", message);
    }

    private void ShowSuccessMessage(string message)
    {
        // Simple console log for now - can be replaced with a proper notification system
        Console.WriteLine($"SUCCESS: {message}");
    }

    private void ShowErrorMessage(string message)
    {
        // Simple console log for now - can be replaced with a proper notification system
        Console.WriteLine($"ERROR: {message}");
    }

    private IEnumerable<PersonDto> FilteredPersons
        => string.IsNullOrWhiteSpace(personSearch) || persons == null
            ? persons ?? Enumerable.Empty<PersonDto>()
            : persons.Where(p => MatchesPerson(p, personSearch));

    private static bool MatchesPerson(PersonDto p, string term)
    {
        var t = term.Trim();
        return ContainsInsensitive(p.FullName, t)
            || ContainsInsensitive(p.City, t)
            || ContainsInsensitive(p.ZipCode, t)
            || ContainsInsensitive(p.Street, t)
            || ContainsInsensitive(p.PhoneNumber, t)
            || ContainsInsensitive(p.EmailAddress, t)
            || (p.DateOfBirth?.ToString("dd-MM-yyyy").Contains(t, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private static bool ContainsInsensitive(string? haystack, string needle)
        => !string.IsNullOrWhiteSpace(haystack) && haystack.Contains(needle, StringComparison.OrdinalIgnoreCase);

    private void ClearPersonSearch()
    {
        personSearch = "";
    }
}

@inject IMediator Mediator
@inject IJSRuntime JSRuntime
